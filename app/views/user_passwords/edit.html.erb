<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
      <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
          <div class="auth-form-light py-5 px-4 px-sm-5">
            <div class="brand-logo text-center">
              <%= image_tag "logo.svg", class:"mr-2", alt:"logo" %>
            </div>
            <h4>Change password!</h4>
            <% flash.each do |key, value| %>
              <%= content_tag :div, value, class: "alert alert-danger alert-dismissible fade show" %>
            <% end %>
            
            <%= form_with(url: '', class: "pt-3", id: "changePasswordForm") do |f| %>
              <%= f.hidden_field :reset_password_token %>
              <div class="form-group">
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <input placeholder="New password" autofocus="autofocus" class="form-control form-control-lg login-input" autocomplete="password" type="password" value="" name="user[password]" id="user_password">
              </div>
              <div class="form-group">
                <input placeholder="Confirm new password" class="form-control form-control-lg login-input" autocomplete="password_confirmation" type="password" value="" name="user[password_confirmation]" id="user_password_confirmation">
              </div>
              <div class="mt-3">
                <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" name="commit" id="changePasswordSubmit" value="CHANGE PASSWORD"  data-disable-with="CHANGE PASSWORD">
              </div>
              <div class="text-center mt-4 font-weight-light">
                Do you know password? <a href="/" class="text-primary">Login</a>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>