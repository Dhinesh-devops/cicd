<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
      <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
          <div class="auth-form-light py-5 px-4 px-sm-5">
            <div class="brand-logo text-center" style="margin-bottom: 1.5rem;">
              <%= image_tag "logo.png", class:"mr-2", alt:"logo" %>
            </div>
            <h4>Forgot your password!</h4>
            <h6 class="font-weight-light">Enter Email ID and get a reset password link.</h6>
            
            <%= form_with(url: '/send_reset_password_email', class: "pt-3", id: "forgotPasswordForm") do |f| %>
              <div class="form-group">
                <input placeholder="Email ID" autofocus="autofocus" class="form-control form-control-lg login-input" autocomplete="email" type="email" value="" name="user[email]" id="user_email">
              </div>
              <div class="mt-3">
                <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" name="commit" id="forgotSubmit" value="SEND" data-disable-with="SEND">
              </div>
              <div class="text-center mt-4 font-weight-light">
                Do you know password? <a href="/" class="text-primary">Login</a>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>