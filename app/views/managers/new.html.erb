<div class="main-panel">
  <div class="content-wrapper">
    <!-- content start -->
    <div class="row">
      <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row mb-3">
              <div class="col-md-6"><p class="card-title">Create New Manager</p></div>
              <div class="col-md-6"><%= link_to "Back to Users List", managers_path,
              :class => "btn btn-primary float-right" %></div>
            </div>
            <%= form_with(url: '/managers', method: :post, class: "form-group", id:"userManageForm", local: true) do |form| %>
              <div class="form-group">
                <label for="exampleInputName1">First Name</label>
                <%= form.text_field :first_name, class: "form-control form-control-sm col-md-6", placeholder: "First Name", autocomplete: "off"  %>
              </div>
              <div class="form-group">
                <label for="exampleInputName1">Last Name</label>
                <%= form.text_field :last_name, class: "form-control form-control-sm col-md-6", placeholder: "Last Name", autocomplete: "off"  %>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail3">Email ID</label>
                <%= form.email_field :email, class: "form-control form-control-sm col-md-6", placeholder: "Email ID", autocomplete: "off"  %>
              </div>
              <button type="submit" id="userManageSubmit" class="btn btn-primary mr-2">Submit</button>
              <%= link_to "Cancel", managers_path, :class => "btn btn-light" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="../assets/manager.js"></script>